;; Mac OSX Support

;; Using alt/option as Emacs meta was too cramped for me. This changes
;; the left 'command' key to be meta.  Control key is still control.
(setq mac-command-modifier 'meta)
(setq mac-right-command-modifier 'none)

(setq mouse-wheel-scroll-amount '(1 ((shift) . 1))) ;; one line at a time
